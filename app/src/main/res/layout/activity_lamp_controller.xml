<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LampControllerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Lamp Controller"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="620dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:orientation="vertical">
                <!--                <androidx.recyclerview.widget.RecyclerView-->
                <!--                    android:id="@+id/rv_lamp_list"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    tools:listitem="@layout/item_lamp"/>-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_input"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_lamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Lamp 1"
                                android:textSize="15sp" />

                            <com.codersroute.flexiblewidgets.FlexibleSwitch
                                android:id="@+id/lamp_switch1"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:checked="false"
                                android:textSize="12sp"
                                app:backgroundColorOnSwitchOff="@color/grey_secondary"
                                app:backgroundColorOnSwitchOn="@color/blue"
                                app:showText="true"
                                app:strokeColorOnSwitchOff="@color/grey_secondary"
                                app:strokeColorOnSwitchOn="@color/blue"
                                app:textColorOnSwitchOff="@color/white"
                                app:textColorOnSwitchOn="@color/white"
                                app:thumbColorOnSwitchOff="@color/white"
                                app:thumbColorOnSwitchOn="@color/white" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_lamp1"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_bulb_off" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_input"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_lamp_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Lamp 2"
                                android:textSize="15sp" />

                            <com.codersroute.flexiblewidgets.FlexibleSwitch
                                android:id="@+id/lamp_switch2"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:checked="false"
                                android:textSize="12sp"
                                app:backgroundColorOnSwitchOff="@color/grey_secondary"
                                app:backgroundColorOnSwitchOn="@color/blue"
                                app:showText="true"
                                app:strokeColorOnSwitchOff="@color/grey_secondary"
                                app:strokeColorOnSwitchOn="@color/blue"
                                app:textColorOnSwitchOff="@color/white"
                                app:textColorOnSwitchOn="@color/white"
                                app:thumbColorOnSwitchOff="@color/white"
                                app:thumbColorOnSwitchOn="@color/white" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_lamp2"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_bulb_off" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_input"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tv_lamp_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Lamp 3"
                                android:textSize="15sp" />

                            <com.codersroute.flexiblewidgets.FlexibleSwitch
                                android:id="@+id/lamp_switch3"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:checked="false"
                                android:textSize="12sp"
                                app:backgroundColorOnSwitchOff="@color/grey_secondary"
                                app:backgroundColorOnSwitchOn="@color/blue"
                                app:showText="true"
                                app:strokeColorOnSwitchOff="@color/grey_secondary"
                                app:strokeColorOnSwitchOn="@color/blue"
                                app:textColorOnSwitchOff="@color/white"
                                app:textColorOnSwitchOn="@color/white"
                                app:thumbColorOnSwitchOff="@color/white"
                                app:thumbColorOnSwitchOn="@color/white" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_lamp3"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_bulb_off" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_lamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:src="@drawable/baseline_add_24"
        app:shapeAppearanceOverlay="@style/fabCircle"
        android:backgroundTint="@color/blue"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>